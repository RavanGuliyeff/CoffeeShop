@model List<Product>
@{
	ushort No = 0;
}

<!-- Begin Page Content -->
<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Products</h1>
	<p class="mb-4">
		You can manage products here.
	</p>

	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">Product table</h6>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>No</th>
							<th>Id</th>
							<th>Name</th>
							<th>Description</th>
							<th>Price</th>
							<th>Edit</th>
						</tr>
					</thead>
					<tbody>
						@foreach (Product item in Model)
						{
							<tr>
								<th>@(++No)</th>
								<th>@item.Id</th>
								<th>@item.Name</th>
								<th>@item.Description</th>
								<th>@item.Price</th>
								<th>
									<a class="btn btn-secondary" asp-action="Update" asp-route-id=@item.Id>Update</a>
									<a class="btn btn-danger" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
								</th>
							</tr>
						}

					</tbody>
				</table>
				<div class="d-flex justify-content-center">
					<a class="btn btn-primary" asp-action="Create">Add</a>
				</div>
			</div>
		</div>
	</div>

</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->
